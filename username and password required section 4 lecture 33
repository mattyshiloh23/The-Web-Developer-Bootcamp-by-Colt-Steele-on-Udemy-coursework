<body>

	<h1>Login</h1>

<!-- action - where the form sends data to -->
<!-- method - what HTTP method (get/post) -->
<form action="http://wikipedia.org" method="get">
<!--	
	<label>Username:<input name="username" type="text" placeholder="username">
	</label>


	<label>Password:<input name="password" type="password" placeholder="password">
	</label>

	<input type=submit>
	

	</form>
-->

<form action="http://wikipedia.org" method="get">
	<label for="username">Username</label>
	<input id="email" name="Username" type="email" placeholder="email" required>

	<label for="Password" >Password:</label>
	<input id="Password" name="Password" type="password" placeholder="Password" required>

	<input type="submit">
</form>


</body>
</html>
